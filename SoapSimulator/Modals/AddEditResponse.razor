<EditForm Model="Body" OnValidSubmit="Save" OnInvalidSubmit='()=>Error("XML string cannot be empty.")'>
    <DataAnnotationsValidator/>
    <MudDialog>
        <DialogContent>
            <MudTextField Lines="10" Variant="Variant.Outlined" @bind-Value="Body" Required Label="Respose Body XML"/>
        </DialogContent>
        <DialogActions>
            <MudButton>Close</MudButton>
            <MudButton Color="Color.Success" ButtonType="ButtonType.Submit" Variant="Variant.Outlined">Done</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

@code {
    [CascadingParameter] MudDialogInstance Dialog { get; set; }
    [Parameter] public string Body { get; set; } = string.Empty;
    void Error(string error) => snackBar.Add(error, Severity.Error);
    void Save()
    {
        if(string.IsNullOrEmpty(Body))
        {
            Error("XML string can't be empty.");
            return;
        }
        var validate = xmlValidator.IsValidXml(Body);
        if(validate.IsValid)
        {
            Dialog.Close(Body);
        }
        else
        {
            Error(validate.Message);
        }
    }
}
